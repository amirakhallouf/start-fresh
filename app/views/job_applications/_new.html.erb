<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <div class="pop-up-content">
      <h3> New Job Application for <%= current_user.name %></h3>
      <hr/>
      <div id="title" class="content">
        <%= simple_form_for [@job_offer, @job_application] do |f| %>
        <p><%= f.input :personal_motivation, as: :text, label: "Personal Motivation" %></p>
        <%= f.button :submit, class: "btn btn-success"%>
        <% end %>
      </div>
    </div>
  </div>
</div>




