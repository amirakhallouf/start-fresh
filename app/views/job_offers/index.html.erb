<% content_for(:title_tag) do %>
  DotAccess | <%= params[:search]%> job offers
<% end %>

<% content_for :meta_title, "DotAccess | Job Offers for #{params[:search]}" %>
<% content_for :meta_description, "Are you a refugee? Browse all the job offers posted by local companies who are looking for #{params[:search]}." %>

<div class="container">
  <div class="search">
    <div class="space_search">
      <form action="job_offers">
        <input type="text" class="searchTerm" placeholder="Search job offers" name="search" value="<%= params[:search]%>">

        <button  type="submit" class="btn btn-info searchButton">
          <i class="fa fa-search"></i>
        </button>

      </form>
      <br>
      <div class="container">
       <h2><FONT FACE="Impact" SIZE="6" COLOR="#22395b">job offers </FONT>-<FONT FACE="Impact" SIZE="6" COLOR="#FF715B"> <%= @job_offers.count  %> </FONT>-</h2>

    </div>
    </div>
  </div>

  <div class="row">
    <% @job_offers.each do |job_offer| %>
    <%= render "job_offers/job_offer_card", job_offer: job_offer %>
    <% end %>
  </div>
</div>

