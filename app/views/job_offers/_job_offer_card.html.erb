<div class="card">

  <% if job_offer.company.picture.url.nil? || job_offer.company.picture.nil? %>
    <% @picture = "http://cumbrianrun.co.uk/wp-content/uploads/2014/02/default-placeholder.png" %>
  <% else %>
    <% @picture = job_offer.company.picture %>
  <% end %>

  <div class="card-logo" style="background-image: url(<%= @picture %>)"></div>

  <div class="card-category">
    <div class="card-description">
    <p><%= job_offer.company.name || "company" %></p>
    <h2><%= job_offer.title %></h2>
    <p><%= job_offer.description[0,50] %></p>
    <% if controller_name == 'users' %>
      <p><%= application.status %></p>
      <p><%= application.personal_motivation %></p>
    <% end %>
  </div>
  </div>



  <%= link_to "",job_offer,class: "card-link"%>
</div>


